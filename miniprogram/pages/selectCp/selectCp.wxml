    </text>
    <image style = "height:15rpx; width:570rpx; position: realative; top: 200rpx;" src = "../../images/line.png"></image>
    </view>
  </view>

    <view wx:else>
    <view wx:for="{{showList}}" wx:for-index="idx" wx:for-item="user" bindtap="bindViewTapUser" id="{{idx}}" class="cu-list menu-avatar" style="margin-top: 20rpx; height: 50vh">
  <view class="cu-item">
    <view class="cu-avatar round lg" style="background-image:url({{user.avatar}});"></view>
