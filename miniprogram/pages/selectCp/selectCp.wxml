      <view class="text-grey">{{user.name}}</view>
      <view class="text-gray text-sm flex">
        <text class="text-cut">
						<text class="cuIcon-infofill text-red  margin-right-xs"></text> 匹配度：{{user.rate}}
        </text>
      </view>
    </view>
